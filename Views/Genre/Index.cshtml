@using BoiMela.Models
@using BoiMela.DataAccess
@{
    ViewBag.Title = "Index";
}
@{ 
    List<Genre> genres = GenreDataAccess.GetGenreList();
}
<div class="row">
    <div class="col-md-12">
        <div class="wraper">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4>All Genres</h4>
                    <p>All the listed genres are here!</p>
                </div>
                <a class="btn btn-success" href="@Url.Action("Create", "Genre")">Create Genre</a>
            </div>
           
            <div class="row">
                <div class="col-md-6">
                    <div class="sale-area">
                        <div class="dt-table-body">
                            <table id="GenreDtTable" class="display tableDataCenter" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (Genre genre in genres)
                                        {
                                            <tr>
                                                <td>@genre.Name</td>
                                                <td>
                                                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Genre", new {id=genre.Id})">Edit</a>
                                                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Genre", new {id=genre.Id})">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                
                              
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    DataTableDefiner("GenreDtTable");
</script>

