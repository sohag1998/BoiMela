
@{
    ViewBag.Title = "Create";
}
@model BoiMela.Models.Writer
<div class="row">
    <div class="col-md-12">
        <div class="wraper">
            <h4 class="m-0">Edit Writer</h4>
            <p>Edit the writer</p>
            @using (Html.BeginForm("Edit", "Writer", FormMethod.Post))
            {
                <div class="row">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
                    </div>
                    <div class="form-group col-md-3">
                        <input class="btn btn-success text-capitalize w-100" type="submit" value="Edit A Writer" name="btnSubmit" />
                    </div>
                    <div class="form-group col-md-3">
                        <a class="btn btn-dark text-capitalize w-100" href="@Url.Action("Index", "Writer")">Cancel</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>


