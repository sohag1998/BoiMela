
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="wraper">
            <h4 class="m-0">Add Writer</h4>
            <p>Create a new writer</p>
            @using (Html.BeginForm("Create", "Writer", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" id="Name" name="name" placeholder="Enter a writer name...">
                    </div>
                    <div class="form-group col-md-3">
                        <input class="btn btn-success text-capitalize w-100" type="submit" value="Create A Writer" name="btnSubmit" />
                    </div>
                    <div class="form-group col-md-3">
                        <a class="btn btn-dark text-capitalize w-100" href="@Url.Action("Index", "Writer")">Cancel</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>


