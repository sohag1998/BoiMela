
@{
    ViewBag.Title = "Dashboard";
}
@model BoiMela.Dtos.SummaryStatDtos

<style>
    .cscard-heading h5{
        font-size: 16px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="wraper">
            <div class="row">
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.TotalBooks</h4>
                            <h5>Total Book</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Book")">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.TotalGenres</h4>
                            <h5>Total Genre</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Genre")">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.TotalPublications</h4>
                            <h5 class="mt-1">Total Publication</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "publication")">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.TotalWriters</h4>
                            <h5>Total Writer</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Writer")">View</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.TotalSales</h4>
                            <h5>Total Sales</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Sales")">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.SoldBooks</h4>
                            <h5>Sold Books</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Sales")">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.InStockBooks</h4>
                            <h5 class="mt-1">In Stock</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Book")">View</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card-item d-flex align-items-center justify-content-between p-2 px-3">
                        <div class="cscard-heading">
                            <h4 class="m-0 fw-bold">@Model.TotalCustomers</h4>
                            <h5>Total Customer</h5>
                        </div>
                        <div class="cscard-body">
                            <a class="btn btn-sm btn-success" href="@Url.Action("Index", "Customers")">View</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</div>